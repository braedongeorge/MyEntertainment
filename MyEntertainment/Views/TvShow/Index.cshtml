@model IEnumerable<MyEntertainment.Models.TvShowModel>

@{
    ViewBag.Title = "Index";
}

<h2>My TV Shows</h2>

<p>
    @Html.ActionLink("Add a show", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.showId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.poster)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.showId)
        </td>
        <td>
            <img src="data:image;base64,@System.Convert.ToBase64String(item.poster)" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
